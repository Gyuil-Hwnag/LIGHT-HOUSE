<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/suggest_main"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/suggest_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="12dp"
        android:background="@drawable/back_custom"
        android:src="@drawable/ic_airplane"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/suggest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/suggest_img"
        android:text="항공사"
        android:textSize="18dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/natural_black"
        android:layout_marginLeft="8dp">
    </TextView>

    <TextView
        android:id="@+id/suggest_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/move_btn"
        android:text="+ 00개"
        android:textSize="18dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/main"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="13dp">
    </TextView>


    <ImageView
        android:id="@+id/move_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_move"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>



</androidx.constraintlayout.widget.ConstraintLayout>