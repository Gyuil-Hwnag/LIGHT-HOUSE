<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/sector_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/delete_btn"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="26dp"
            android:src="@drawable/ic_delete_scrap">
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:id="@+id/sector_item">

        <TextView
            android:id="@+id/company_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="카카오 98,500원"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/company_txt"
            app:layout_constraintBottom_toBottomOf="@id/company_txt"
            app:layout_constraintRight_toRightOf="parent"
            android:text="BUY"
            android:textSize="16dp"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/buy_custom">
        </TextView>

        <TextView
            android:id="@+id/targetprice_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/stockcompany_txt"
            app:layout_constraintBottom_toBottomOf="@id/stockcompany_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="목표가 129,000원"
            android:textSize="14dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/natural5">
        </TextView>

        <TextView
            android:id="@+id/stockcompany_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/status_txt"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:text="유진투자증권"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/natural5">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/stockcompany_txt"
            android:background="@color/natural8"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>